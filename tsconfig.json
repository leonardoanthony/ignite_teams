{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./src/assets/*"],
      "@screens/*": ["./src/screens/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["styled-components"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
